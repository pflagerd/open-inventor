IVDEPTH = ../..
include $(IVDEPTH)/makeincs/ivcommondefs

LCDEFS = $(LCXXDEFS)

ARCHIVE = libFLiv.a

LCINCS += -I/usr/include/freetype2

CFILES = fl.c flclient.c flfreetype.c

